@model Web.Models.LoginModel
<script type="text/javascript">
    var mensagem = @Html.Raw(Json.Encode(ViewData["EditError"]));
    var controles = {
        onReady: function() {
            $.validator.methods.date = function (value, element) {
                return this.optional(element) || moment(value, "DD/MM/YYYY", true).isValid();
            }
            window.$('#loading').hide();
            _erros(mensagem);
            mascaras();
        }
    };
    $(document).ready(controles.onReady);
</script>
<div id="login" class="login-clean">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration">
            <img src="~/Content/assets/img/logo-icone-seintraf.png">
            <h5 class="text-center text-black-50">ASSEMBLEIA ONLINE</h5>
        </div>
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Matrícula Funcional</label>
            @Html.TextBoxFor(e => e.Matricula, null, new { @class = "form-control mSINDICATO", name = "Matricula", id = "Matricula"})
        </div>
        <div class="form-group">
            <label>CPF</label>
            @Html.TextBoxFor(e => e.Cpf, null, new { @class = "form-control mCPF", name = "Cpf", id = "Cpf" })
        </div>
        <div class="form-group">
            <label>Data de Nascimento</label>
            @Html.TextBoxFor(f => f.DataNasc, null, new { @class = "form-control mDATA", id = "DATANASC", placeholder = "Data nascimento" })
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" data-bs-hover-animate="pulse" type="submit" style="background-color: rgb(0, 150, 87);">ACESSAR</button>
            @Html.ActionLink("CADASTRAR", "Index", "Home", null, new { @class = "btn btn-primary btn-block", style = "background-color: blue;" })
        </div>
    }
</div>
<div class="text-center footer-basic" style="background-color: rgb(241,247,252);">
    <footer>
    </footer>
    <a href="https://www.agenciainterativa.com.br" style="color: #666;" target="_blank">Powered: AgênciaInterativa.NET</a>
</div>