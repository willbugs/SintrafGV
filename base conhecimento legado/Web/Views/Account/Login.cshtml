@model Web.Models.LoginModel
<style>
    #text {
        display: none;
        color: red
    }
</style>
<script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function () { (i[r].q = i[r].q || []).push(arguments); }, i[r].l = 1 * new Date();
        a = s.createElement(o), m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m);
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
    ga('create', 'UA-118965717-1', 'auto');
    ga('send', 'pageview');
</script>
<script type="text/javascript">

    function Caps() {
        var input = document.getElementById("fpassword");
        var text = document.getElementById("text");
        input.addEventListener("keyup", function(event) {
            if (event.getModifierState("CapsLock")) { text.style.display = "block"; } else { text.style.display = "none"; }
        });
    }

    var mensagem = @Html.Raw(Json.Encode(ViewData["EditError"]));
    var controles = {
        onReady: function() {
            window.$('#loading').hide();
            _erros(mensagem);
            Caps();
        }
    };
    $(document).ready(controles.onReady);
</script>
<div id="login" class="app flex-row align-items-center bg-blue">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <h1>Login</h1>
                            <p class="text-muted">Faça login em sua conta</p>
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-user"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(e => e.Usuario, null, new { @class = "form-control", placeholder = "Usuário", name = "username", id = "flogin" })
                                </div>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-lock"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(e => e.Senha, null, new { @class = "form-control", placeholder = "Senha", name = "password", type = "password", id = "fpassword" })
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button id="bLoginAcc" class="btn btn-primary px-4" type="submit">Entrar</button>
                                    </div>
                                    <div class="col-6 my-auto">
                                        <strong id="text">Caps lock</strong>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card bg-white align-content-center">
                        <img src="~/Content/imagem/foto-sindicato.jpg" alt="PcMaxInf" class="responsive">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>