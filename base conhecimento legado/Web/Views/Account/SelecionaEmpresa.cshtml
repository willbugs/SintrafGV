@model Web.Models.LoginModel
<script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments);
        }, i[r].l = 1 * new Date();
        a = s.createElement(o), m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m);
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
    ga('create', 'UA-118965717-1', 'auto');
    ga('send', 'pageview');
</script>
<script type="text/javascript">
    var mensagem = @Html.Raw(Json.Encode(ViewData["EditError"]));
    var controles = {
        onReady: function() {
            $('#loading').hide();
        }
    };
    $(document).ready(controles.onReady);
</script>
<div id="login" class="app flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <h1>Empresa</h1>
                            <p class="text-muted">Selecione sua empresa</p>
                            @using (Html.BeginForm("SelecionaEmpresa", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.HiddenFor(c => c.Senha)
                                    @Html.HiddenFor(c => c.Usuario)
                                    @Html.DropDownListFor(c => c.Empresa, (ViewData["Empresas"] as List<SelectListItem>), string.Empty, new { @class = "form-control input-lg", @rows = 2, placeholder = "Empresa", id = "Empresa" })
                                </div>
                                <button id="botaosalvar" type="submit" class="btn btn-lg btn-primary btn-block">Entrar</button>
                                if (ViewData["EditError"] != null)
                                {
                                    @Html.Raw("<hr>")
                                    <div class="alert alert-danger fade in">
                                        <a href="#" class="close" data-dismiss="alert">&times;</a><strong>Atenção! </strong>@ViewData["EditError"]
                                    </div>}
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>